{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags("forgotPassword") }}
{% endblock %}

{% block title %}{{ parent() }}Mot de passe oublié{% endblock %}

{% block content %}
    <form method="post">
        <h1>Mot de passe oublie ?</h1>

        <p id="resetPasswordIndication">
            Un lien vous sera envoyé par email.<br>
            En cliquant sur le lien qu'il contient, vous pourrez renouveler votre mot de passe.
        </p>

        <p>
            <input type="email" name="email" id="inputEmail" placeholder="Email" required autofocus>
        </p>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="commonButtons" type="submit">Envoyer</button>

        {% for alertMessage in app.flashes("alert") %}
            <div class="mailIndication">{{ alertMessage }}</div>
        {% endfor %}

        {% for alertMessage in app.flashes("success") %}
            <div class="mailIndication">{{ alertMessage }}</div>
        {% endfor %}
    </form>
{% endblock %}
