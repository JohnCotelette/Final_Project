{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('candidate_dashboard') }}
{% endblock %}

{% block title %}{{ parent() }}Profil - {{ user.firstName }}{% endblock %}

{% block content %}

<div class="container-fluid">
    <div class="row flex ">
        <div class="container-fluid">
            <div class="row flex ">
                <div class="col-4  flex-grow-1  heightmenu ">
                    {% include 'user/dashboard/candidate/navcandidate.html.twig' %}
                 </div>    
                <div class="col-8 w-100">
                    <h1 class=" text-center  my-5"> {{ user.lastName }}-{{ user.firstName }}</h1>
                    <div class="tab-content" id="nav-tabContent">

                        <div class="row  justify-content-around" >

                            {% if(user.applications|length > 0) %}
                                {% for application in user.applications %}
                                    <div class="card col-sm-12 col-md-2 col-lg-3 " style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ application.offer.title }}</h5>
                                            <h6 class="card-subtitle mb-2 text-muted">{{ application.createdAt|date('d/m/y') }}</h6>
                                            <p class="card-text">{{ application.motivation }}</p>
                                            
                                        </div>
                                        <div class="card-footer ">
                                            <a  href="{{ path('show_offer',  {'id': application.offer.id}) }}"  style="width: 100%" class="btn btn-primary">Annonce</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
        
                        </div>

                    </div>    
                </div>   
            </div>   
         </div>
    </div>
 </div>  
 {% endblock %}
 
