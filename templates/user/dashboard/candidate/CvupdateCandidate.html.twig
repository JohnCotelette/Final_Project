{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('candidate_dashboard') }}
{% endblock %}

{% block title %}{{ parent() }}Profil - {{ user.firstName }}{% endblock %}


{% block content %}

<div class="container-fluid">
    <div class="row flex ">
        <div class="container-fluid">
            <div class="row flex ">
                <div class="col-4  flex-grow-1  heightmenu ">
                    {% include 'user/dashboard/candidate/navcandidate.html.twig' %}
                 </div>    
                <div class="col-8 w-100">
                    <h1 class=" text-center  my-5"> {{ user.lastName }}-{{ user.firstName }}</h1>
                    <div class="tab-content" id="nav-tabContent">
                        <div class=" align-items-start mt-0"></div> 
                            <div class="align-self-center mb-3">
                                {{ form_start(formCv) }}
        
                                {{ form_end(formCv) }}
                             </div>
        
                            {% if user.cv %}
                                <iframe src="{{ asset('candidate_cv/' ~ user.cv.name ) }}" frameborder="0"
                                        style="height: 100vh; width: 100%">
                                </iframe>
                            {% endif %}
                        </div>
                    </div>    
                </div>   
            </div>   
         </div>
    </div>
 </div>  
 {% endblock %}