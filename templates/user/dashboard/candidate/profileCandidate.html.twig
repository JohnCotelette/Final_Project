{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('candidate_dashboard') }}
{% endblock %}

{% block title %}{{ parent() }}Profil - {{ user.firstName }}{% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="row flex ">
            <div class="container-fluid">
                <div class="row flex ">
                    <div class="col-lg-2 col-md-2 col-sm-12 flex-grow-1  heightmenu ">
                       {% include 'user/dashboard/candidate/navcandidate.html.twig' %}
                    </div>    
                    <div class="col-lg-10 col-md-10 col-sm-12">
                        {% for label, messages in  app.flashes  %}
                            <div class="mt-2 container text-center">
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }}" role="alert">
                                        {{ message | raw }}
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                        <h1 class="text-center my-3"> {{ user.lastName }}-{{ user.firstName }}</h1>
                        <div class="tab-content">
                            <!-- section of avatar and formavatar -->
                            <div class="d-flex m-auto businessImgContainer">
                                <figure id="avatarUser">
                                    <button id="btnAvatarUser" type="button" class="btn btn-primary invisible" data-toggle="modal" data-target="#exampleModalCenter">
                                            Changer de photo
                                    </button>
                                    {% if user.avatar != null %}
                                        <img src="{{ asset('user_avatars/' ~ user.avatar.name ) }}" alt="avatar de candidat">
                                    {% else %} 
                                        <img src="{{ asset('user_avatars/avatar.jpg') }}" alt="avatar par défaut">
                                    {%  endif %}
                                </figure>
                                
                                <!-- The Modal -->
                                <div id="myModal" class="modal">
                                    <!-- Modal content -->
                                    <div class="modal-content">
                                        <span id="spanModal" class="close">&times;</span>
                                        {{ form_start(formAvatar) }}
                                        
                                            {{ form_label(formAvatar.avataruser) }}
                                    
                                        {% if form_errors(formAvatar.avataruser) %}
                                            <div id="avatarError" class="alert alert-warning">
                                                {{ form_errors(formAvatar.avataruser)  }}
                                            </div>
                                        {% endif %}
                                        
                                        <div class="d-flex justify-content-around">
                                            <div>
                                                {{ form_widget(formAvatar.avataruser) }}
                                            </div>
                                            <div>
                                                {{ form_label(formAvatar.save) }}
                                                {{ form_widget(formAvatar.save) }}
                                            </div>     
                                        </div>
                                        {{ form_end(formAvatar) }}
                                    </div>
                                </div>
                            </div>
                        </div>   
                            {#  add all file dashboard user  #}
                        <div class="fade show ">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Nom:</th>
                                        <td>{{ user.firstName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prénom:</th>
                                        <td>{{ user.lastName }}</td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <th>Date de naissance</th>
                                    <td>{{ user.birthDay ? user.birthDay|date('d-m-Y') }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>    
                </div>   
            </div>   
        </div>
    </div>  
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags("candidate_dashboard") }}
{% endblock %}
