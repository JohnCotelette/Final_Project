{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{encore_entry_link_tags("allBusiness")}}
{% endblock %}

{% block title %}{{ parent() }}Liste des entreprises{% endblock %}


{% block content %}
    <div id="titleContainer">
        <h1>Les entreprises de FindLab qui recrutent</h1>
        <p>Ils peuvent faire exploser votre carri√®re !</p>
    </div>

    <div class="bodyBusinessPage">
        {% for business in pagination %}
            <div class="displayBusiness">
                <div class="businessImgContainer">
                    <figure>
                        <img src="{{ business.avatar ? asset('business_avatars/' ~ business.avatar.name) : asset("build/images/question_mark.42e63c4a.png") }}"
                             alt="Business Avatar" />
                    </figure>
                </div>
                <div class="displayBusinessDetails">
                    <div class="businessName">
                        <h2> <a href="{{ path ("show_business", {'id': business.id}) }}">{{ business.name }}</a> </h2>
                    </div>
                    <ul>
                        <li>{{ business.employeesNumber }}</li>
                        <li> &#8226;</li>
                        <li>{{ business.kind }}</li>
                        <li> &#8226;</li>
                        <li>{{ business.location }}</li>
                    </ul>
                </div>
            </div>
            <hr>
        {% endfor %}
    </div>

    <div class="paginationContainer container d-flex justify-content-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags("allBusiness") }}
{% endblock %}