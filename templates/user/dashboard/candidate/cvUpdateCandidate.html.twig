{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('candidate_dashboard') }}
{% endblock %}

{% block title %}{{ parent() }}Profil - {{ user.firstName }}{% endblock %}
{% form_theme formCv 'bootstrap_4_layout.html.twig' %}

{% block content %}

    {% for label, messages in  app.flashes %}
    <div class="container">
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message | raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    </div>
    {% endfor %}

    <div class="container-fluid">
        <div class="row flex ">
            <div class="container-fluid">
                <div class="row flex ">
                    <div class="col-lg-2 col-md-2 col-sm-12 flex-grow-1  heightmenu ">
                        {% include 'user/dashboard/candidate/navcandidate.html.twig' %}
                    </div>    
                    <div class="col-lg-10 col-md-10 col-sm-12">
                        <h1 class=" text-center  my-5"> {{ user.lastName }}-{{ user.firstName }}</h1>
                                                   
                        <div class="align-self-center mb-3">
                            {{ form_start(formCv) }}
    
                            {{ form_end(formCv) }}
                           
                            {% if user.cv %}
                                <iframe src="{{ asset('candidate_cv/' ~ user.cv.name ) }}" frameborder="0"
                                        style="height: 100vh; width: 100%">
                                </iframe>
                            {% endif %}
                        </div>    
                    </div>   
                </div>   
            </div>
        </div>
    </div>  
{% endblock %}