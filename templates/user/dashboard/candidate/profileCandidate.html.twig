{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('candidate_dashboard') }}
{% endblock %}

{% block title %}{{ parent() }}Profil - {{ user.firstName }}{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row flex ">
            <div class="container-fluid">
                <div class="row  text-align-center flex ">
                    <div class="col-lg-3 col-md-3 col-sm-12 flex-grow-1  heightmenu ">
                       {% include 'user/dashboard/candidate/navcandidate.html.twig' %}
                    </div>    
                    <div class="px-5 col-lg-9  col-md-9 col-sm-12 w-100">
                        {% for label, messages in  app.flashes  %}
                            <div class="container">
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }}" role="alert">
                                        {{ message | raw }}
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                {% endfor %} 
                            </div>
                        {% endfor %}
                        <h1 class=" text-center  my-5"> {{ user.lastName }}-{{ user.firstName }}</h1>
                        <div class="tab-content">
                            <!-- section of avatar and formavatar -->
                            <div id="avatarContainer" class="justify-content-left">
                                <figure >
                                    <img class="img-thumbnail" src="{{ user.avatar ? asset('user_avatars/' ~ user.avatar.name) : asset('build/images/question_mark.42e63c4a.png') }}" />
                                </figure>
                            </div>
                        </div>   
                            {#  add all file dashboard user  #}
                        <div class="fade show ">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Nom:</th>
                                        <td>{{ user.firstName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Pr√©nom:</th>
                                        <td>{{ user.lastName }}</td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <th>Email:</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    <th>Date de naissance:</th>
                                    <td>{{ user.birthDay ? user.birthDay|date('d-m-Y') }}</td>
                                    </tr>
                                   </tbody>
                            </table>
                        </div>
                    </div>    
                </div>   
            </div>   
        </div>
    </div>  
{% endblock %}
